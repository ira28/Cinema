<LinearLayout android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#ff9234"
    android:layout_gravity="start"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.github.siyamed.shapeimageview.RoundedImageView
        app:siRadius="6dp"
        android:id="@+id/IV_ThumbnailUpComing"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/one_night_two_day"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        >

        <TextView
            android:id="@+id/TV_TitleUpComing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Night 2 Days"
            android:textSize="18dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/kanit_bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/TV_MinUpComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="106 Menit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="  -  "/>

            <TextView
                android:id="@+id/TV_GenreUpComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="Crime | Horror"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="Distributor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text=":  "/>

            <TextView
                android:id="@+id/TV_DirecturUpComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="SBS"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="Pemeran"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text=":  "/>

            <TextView
                android:id="@+id/TV_StarsUpComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="lee"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="Tayang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text=":  "/>

            <TextView
                android:id="@+id/TV_PlayUpComing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/kanit_medium"
                android:textSize="10dp"
                android:text="5 april 2011"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>